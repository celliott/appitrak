<%= link_to "", 
    {:action => 'daily_chart'}, 
    id: "daily_charts", 
    remote: true 
%>

<%= form_for(
 			:daily_chart, 
 			:url => {:action => 'daily_chart'}, 
 			:html => { :id => 'date_selectors' }, 
