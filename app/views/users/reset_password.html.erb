<div class="login">
  <div id="page_description">
    <h3>reset password</h3>
  </div>

  <%= form_for(:user, :url => {:action => 'send_reset_password'}) do |f| %>
   <div><%= f.text_field :email, :placeholder => 'enter email' %></div>
   <%= f.hidden_field :password, :value => @new_password %>
   <div><%= submit_tag "reset password", :class=> "button" %>
        <% end %>
   </div>
</div>

