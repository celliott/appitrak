<div class="login">
  <%= form_tag(:action => 'attempt_login', :authenticity_token => false) do %>
   <div><%= text_field_tag 'email', nil, :placeholder => 'email' %></div>
   <div><%= password_field_tag 'pass', nil, :placeholder => 'password' %></div>
   <div class="checkbox">
   <%= check_box 'remember_me', 'remember', :checked => true, :id => 'remember_me' %>
     <label for="remember_me">remember me</label>  
   </div>
   <div><%= submit_tag "log in", :class=> "button" %>
        <% end %>
   </div>
   <%= link_to "forgot password", 
	      login_url, 
	      id: "forgot_password", 
	      :class => "button"
	  %>
</div>